<!-- res/drawable/button_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 눌렸을 때 배경색 (pressed 상태) -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#E0E0E0"/> <!-- 누른 상태에서 약간 어두운 회색 배경 -->
            <stroke
                android:width="2dp"
                android:color="#08538A" /> <!-- 동일한 테두리 -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- 기본 상태 배경색 -->
    <item>
        <shape>
            <solid android:color="#FFFFFF"/> <!-- 기본 배경 흰색 -->
            <stroke
                android:width="2dp"
                android:color="#08538A" /> <!-- 동일한 테두리 -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
